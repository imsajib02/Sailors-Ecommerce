<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:thicknessRatio="1.9">

        <RelativeLayout
            android:id="@+id/rel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp">

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@color/grey_20"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_105sdp"
                android:layout_marginTop="@dimen/_21sdp">

                <ImageView
                    android:id="@+id/ic_image"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@color/grey_20" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ic_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/product_image"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="#EEEDEE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_line"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_13sdp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@color/grey_20"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_semibold"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

                <ImageView
                    android:id="@+id/rate_detail"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_below="@+id/product_name"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@color/grey_20"
                    android:focusableInTouchMode="false" />

                <TextView
                    android:id="@+id/txt_totalreview"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_below="@+id/product_name"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_toEndOf="@+id/rate_detail"
                    android:background="@color/grey_20"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/_7sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_below="@+id/rate_detail"
                    android:layout_marginTop="@dimen/_minus3sdp"
                    android:layout_marginBottom="@dimen/_4sdp">

                    <RelativeLayout
                        android:id="@+id/price_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_toStartOf="@+id/txt_buy_now">

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="@dimen/_27sdp"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txt_original"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/grey_20"
                            android:fontFamily="@font/opensans_semibold"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_9sdp" />


                        <TextView
                            android:id="@+id/txt_original"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@color/grey_20"
                            android:fontFamily="@font/opensans_regular"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_7sdp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_buy_now"
                        android:layout_width="@dimen/_52sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_20"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_6sdp" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>