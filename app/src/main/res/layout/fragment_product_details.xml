<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    android:id="@+id/root_view"
    android:clipToPadding="false"
    tools:context="com.b2gsoft.sailorsexpress.fragment.ProductDetailsFragment">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/lay_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/lay_appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:animateLayoutChanges="true"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:contentScrim="#f0f0f0"
                app:expandedTitleGravity="top"
                app:expandedTitleTextAppearance="@android:color/black"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f0f0f0"
                    app:layout_collapseMode="parallax">

                    <RelativeLayout
                        android:id="@+id/image_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="@dimen/_minus15sdp"
                            android:background="#f0f0f0"
                            android:fitsSystemWindows="false" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/indicator_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_container"
                        android:layout_marginTop="@dimen/_minus20sdp"
                        android:visibility="visible">

                        <me.relex.circleindicator.CircleIndicator2
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerHorizontal="true"
                            app:ci_drawable="@drawable/round"
                            app:ci_drawable_unselected="@drawable/dot"
                            app:ci_height="@dimen/_5sdp"
                            app:ci_width="@dimen/_5sdp" />

                    </RelativeLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_90sdp"
                    android:layout_marginEnd="@dimen/_90sdp"
                    android:elevation="10dp"
                    android:fitsSystemWindows="true"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    tools:ignore="UnusedAttribute" />

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:id="@+id/lay_back"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        android:background="@drawable/like_background1">

                        <ImageView
                            android:id="@+id/ic_close"
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:background="@drawable/header_arrow_left" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <com.b2gsoft.sailorsexpress.utils.MyNestedScrollView
            android:id="@+id/nested_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:id="@+id/product_data_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/detail_bg">

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/txt_discount"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_below="@id/txt_product_name"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:background="@drawable/discount_background"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/txt_vat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_below="@id/txt_product_name"
                    android:layout_toEndOf="@+id/txt_discount"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_rectangle_2"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp" />

                <RelativeLayout
                    android:id="@+id/price_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_below="@+id/txt_discount"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/opensans_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/txt_original"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toEndOf="@+id/txt_price"
                        android:fontFamily="@font/opensans_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8sdp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/price_container"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/light_grey" />

                <RelativeLayout
                    android:id="@+id/lay_stocks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center|start"
                    android:layout_below="@+id/img_line_1">

                    <TextView
                        android:id="@+id/txt_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="@string/stocks_available"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txt_stock_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle"
                        android:backgroundTint="@color/orange"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_toEndOf="@+id/txt_stock"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_11sdp"
                        android:paddingEnd="@dimen/_11sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center|start"
                    android:layout_below="@+id/lay_stocks">

                    <TextView
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="@string/size"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_toEndOf="@+id/txt_category"
                        android:background="@color/transparent"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fitsSystemWindows="false" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lay_add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_size"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/lay_quantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:gravity="center|start"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_decrease"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/minus_img"/>

                        <TextView
                            android:id="@+id/txt_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/txt_decrease"
                            android:fontFamily="@font/opensans_semibold"
                            android:includeFontPadding="false"
                            android:gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="1"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/txt_increase"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_toEndOf="@+id/txt_quantity"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/add_img"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/add_to_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_rectangle"
                            android:fontFamily="@font/opensans_semibold"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_8sdp"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/add_to_cart"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/lay_add_cart"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/light_grey" />

                <RelativeLayout
                    android:id="@+id/lay_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_below="@+id/img_line_2">

                    <TextView
                        android:id="@+id/txt_des_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/description"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_des_header"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />

                    <TextView
                        android:id="@+id/txt_details_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_description"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/product_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:id="@+id/lay_sku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/txt_details_header">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sku"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_sku"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/sku"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_sku">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/brand"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_brand_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/brand"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_brand">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/category"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_cat_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/category"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_sub_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_cat">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subcategory"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_sub_cat_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/subcategory"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_featured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_sub_cat">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/featured"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_featured"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/featured"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_featured">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/new_arrival_1"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_new"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/new_arrival_1"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_top_sell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_new">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/top_selling_1"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_top_sell"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/top_selling_1"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_free_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_below="@+id/lay_top_sell">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/free_delivery"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                        <TextView
                            android:id="@+id/txt_free_delivery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.65"
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:text="@string/free_delivery"
                            android:textColor="@color/black_60"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_semibold"/>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/lay_brand_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        android:innerRadius="0dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:thicknessRatio="1.9"
                        android:layout_below="@+id/lay_free_delivery">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_brand"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_image_black_24dp"/>

                            <TextView
                                android:id="@+id/txt_brand_name_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:paddingTop="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:text="@string/sku"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_semibold"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:id="@+id/img_line_4"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_below="@id/lay_brand_detail"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:background="@color/light_grey" />

                    <TextView
                        android:id="@+id/txt_similar_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_line_4"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/similar_products"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/recycler_similar_products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_similar_products"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:nestedScrollingEnabled="false"
                        app:shimmer_demo_angle="30"
                        app:shimmer_demo_child_count="4"
                        app:shimmer_demo_duration="1000"
                        app:shimmer_demo_grid_child_count="2"
                        app:shimmer_demo_layout_manager_type="grid"
                        app:shimmer_demo_layout="@layout/product_shimmer"
                        app:shimmer_demo_shimmer_color="@color/shimmer" />

                </RelativeLayout>

            </RelativeLayout>

        </com.b2gsoft.sailorsexpress.utils.MyNestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <include
        android:id="@+id/container_not_connected"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:visibility="gone"
        layout="@layout/not_connected_layout"/>

</RelativeLayout>
